<h1>Listing invitations</h1>

<table>
  <thead>
    <tr>
      <th>Invited user</th>
      <th>Inviting user</th>
      <th>Room</th>
      <th>Responded</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @invitations.each do |invitation| %>
      <tr>
        <td><%= invitation.invited_user_id %></td>
        <td><%= invitation.inviting_user_id %></td>
        <td><%= invitation.room_id %></td>
        <td><%= invitation.responded %></td>
        <td><%= link_to 'Show', invitation %></td>
        <td><%= link_to 'Edit', edit_invitation_path(invitation) %></td>
        <td><%= link_to 'Destroy', invitation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Invitation', new_invitation_path %>
